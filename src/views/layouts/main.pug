include ../mixins/message

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/static/styles.css")
        link(href="https://pajuhakdang-project.s3.ap-northeast-2.amazonaws.com/Photo/logo.png" rel="shortcut icon" type="image/x-icon")
        link(href='https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;900&display=swap' rel='stylesheet')
        <script src="https://kit.fontawesome.com/5d9d40e7fe.js" crossorigin="anonymous"></script>
        title #{pageTitle}
    body 
        .container 
            if user
                input(type='hidden', value=user)#myUserData
            include ../partials/header
            main
                block content 
        script(src="/static/main.js")